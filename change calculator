# Change Calculator
import time 
print("Working on it..")
time.sleep(2)


change = int(input("Your change from the transaction is.."))

#coins
a = 100
b = 50
c = 20
d = 10
e = 5
f = 1 

if change < 0:
    print("Error, dollar amount must be positive.")
else:
    seringgit = change // a
    lima_puluh_sen = (change % a) // b
    dua_puluh_sen = change % a % b // c
    sepuluh_sen = change % d

print("The number of coins for ", change, "sen are: ")
print("Seringgit: " + str( seringgit))
print("lima posen: ", lima_puluh_sen)
print("dua posen: ", dua_puluh_sen)
print("seposen: ", sepuluh_sen)
